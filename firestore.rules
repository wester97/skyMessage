rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Saints collection - public read access, write requires auth
    match /saints/{saintId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow queries on the saints collection
    match /saints {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Raw subcollections - public read access
    match /saints/{saintId}/raw/{rawId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default: allow read/write for authenticated users
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}


