rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Saints collection - read only for public, write requires auth
    match /saints/{saintId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default: allow read/write for authenticated users
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}

